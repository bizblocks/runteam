<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://scriptView.title">
    <actions>
        <action id="run" text="msg:///run"/>
    </actions>
    <layout>
        <tabSheet width="100%" height="100%">
            <tab id="controllerTab" label="Controller">
                <vbox width="100%" height="100%">
                    <nativeLabel text="class ScriptableViewGenerated extends ScriptableView {"/>
                    <codeEditor id="controller" width="100%" height="100%" mode="GROOVY" liveSuggestionsEnabled="true"/>
                    <nativeLabel text="}"/>
                </vbox>
            </tab>
            <tab id="descriptorTab" label="Descriptor">
                <codeEditor id="descriptor" height="100%" width="100%" mode="XML" liveSuggestionsEnabled="true"/>
            </tab>
        </tabSheet>
        <button action="run"/>
    </layout>
</view>