<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://runGroovy.title">
    <data>
        <collection id="rtScriptsDc" class="dev.smartdata.runteam.entity.RTGroovyScript" fetchPlan="_local">
            <loader id="rtScriptsDl">
                <query>
                    <![CDATA[select e from rt_RTGroovyScript e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="run" text="msg:///run"/>
    </actions>
    <layout>
        <fragment id="scriptBox" class="dev.smartdata.runteam.view.scriptbox.ScriptBox"/>
        <split width="100%" height="100%" orientation="VERTICAL">
            <codeEditor id="code" mode="GROOVY" width="100%" height="100%" dataContainer="rtScriptsDc" property="script"
                        liveSuggestionsEnabled="true"/>
            <vbox width="100%" height="100%">
                <button id="btnRun" action="run"/>
                <split splitterPosition="50" height="100%" width="100%">
                    <vbox>
                        <nativeLabel text="msg://result"/>
                        <textArea id="result" width="100%" height="100%" readOnly="true"/>
                    </vbox>
                    <vbox>
                    <nativeLabel text="msg://console"/>
                        <textArea id="console" width="100%" height="100%" readOnly="true"/>
                    </vbox>
                </split>
            </vbox>
        </split>
    </layout>
</view>