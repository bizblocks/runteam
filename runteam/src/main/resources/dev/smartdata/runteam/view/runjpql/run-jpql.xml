<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://runJpql.title">
    <actions>
        <action id="run" text="Беги"/>
    </actions>
    <layout>
        <split width="100%" height="100%" orientation="VERTICAL">
            <codeEditor id="code" width="100%" height="100%" mode="SQL"/>
            <vbox height="100%" width="100%">
                <hbox>
                    <button action="run"/>
                    <hbox id="tableButtons" visible="false">
                        <button action="result.export"/>
                    </hbox>
                </hbox>
                <dataGrid id="result" width="100%" height="100%" metaClass="sys_KeyValueEntity">
                    <actions>
                        <action id="export" type="grdexp_excelExport"/>
                    </actions>
                </dataGrid>
                <textArea id="textResult" width="100%" height="100%" visible="false"/>
            </vbox>
        </split>
    </layout>
</view>